<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:id="@+id/item_layout"
    tools:context=".ui.notas.NotasFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="15dp"
        card_view:cardBackgroundColor="@color/beige"
        card_view:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/homeeee"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titulos"
                android:text="Notas"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/detalleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titulos"
                    android:text="Detalle"
                    android:textColor="@color/Azul"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/detalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titulos"
                    android:text=""
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_background"/>

                <TextView
                    android:id="@+id/descriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:fontFamily="@font/titulos"
                    android:textColor="@color/Azul"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titulos"
                    android:text="hhhh"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_background"/>

                <TextView
                    android:id="@+id/fechaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:fontFamily="@font/titulos"
                    android:textColor="@color/Azul"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titulos"
                    android:text=""
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_background"/>

                <TextView
                    android:id="@+id/valorLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calificación"
                    android:fontFamily="@font/titulos"
                    android:textColor="@color/Azul"
                    android:textSize="17sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/valor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titulos"
                    android:text=""
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_background"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
